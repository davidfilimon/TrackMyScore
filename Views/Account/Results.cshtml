@model List<User>
@{
    ViewData["Title"] = "Search Results";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>@ViewData["Title"] - TrackMyScore</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
  <style>
    :root {
      --primary-dark: #1A3C2A;
      --primary:      #2A5940;
      --primary-light:#3B7A5A;
      --accent-gold:  #D4AF37;
      --accent-gold-light:#F0D875;
      --card-bg:      #234134;
      --text-light:   #E8F5E9;
      --text-muted:   #A7C0A7;
      --spacing-unit: 8px;
    }
    body {
      padding-top: 80px;
      background-color: var(--primary-dark);
      color: var(--text-light);
      min-height: 100vh;
      font-family: Arial, Helvetica, sans-serif;
    }
    .results-container {
      max-width: 600px;
      margin: 0 auto;
    }
    .results-card {
      background-color: var(--card-bg);
      border-radius: 12px;
      padding: calc(var(--spacing-unit)*4);
      box-shadow: 0 8px 24px rgba(0,0,0,0.3);
      margin-bottom: calc(var(--spacing-unit)*2);
    }
    .results-card h2 {
      color: var(--accent-gold);
      font-weight: 600;
      margin-bottom: calc(var(--spacing-unit)*3);
    }
    .user-row {
      background-color: var(--primary);
      border-radius: 8px;
      padding: calc(var(--spacing-unit)*2);
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: calc(var(--spacing-unit)*2);
      transition: background-color .3s, transform .2s;
    }
    .user-row:hover {
      background-color: var(--primary-light);
      transform: translateY(-2px);
    }
    .user-name {
      font-size: 1rem;
      color: var(--text-light);
      font-weight: 500;
    }
    .btn-view {
      background-color: var(--accent-gold);
      color: var(--primary-dark);
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.9rem;
      transition: background-color .3s, transform .2s;
    }
    .btn-view:hover {
      background-color: var(--accent-gold-light);
      transform: translateY(-1px);
    }
    .no-results {
      text-align: center;
      color: var(--text-muted);
      font-style: italic;
      padding: calc(var(--spacing-unit)*3) 0;
    }
    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background-color: var(--accent-gold);
      color: var(--primary-dark);
      font-weight: 600;
      font-size: 1rem;
    }
  </style>
</head>
<body>
  <div class="results-container">
    <div class="results-card">
      <h2>
        <i class="fa-solid fa-search me-2"></i>
        Search results for: 
        <span style="color:var(--accent-gold)">@ViewData["SearchQuery"]</span>
      </h2>

      @if (!Model.Any())
      {
        <div class="no-results">No users found.</div>
      }
      else
      {
        @foreach (var user in Model)
        {
          <div class="user-row">
            <div class="d-flex align-items-center gap-3">
              @if (user.Picture == 0)
              {
                <div class="avatar">
                  @user.Username[0].ToString().ToUpper()
                </div>
              }
              else
              {
                <img 
                  class="avatar" 
                  src="~/images/avatars/avatar-@(user.Picture).png" 
                  alt="@user.Username" />
              }
              <span class="user-name">@user.Username</span>
            </div>
            <a asp-controller="Account" asp-action="Profile" asp-route-id="@user.Id" class="btn btn-view">
              <i class="fa-solid fa-user me-1"></i> View
            </a>
          </div>
        }
      }
    </div>
  </div>
</body>
</html>
