@model List<User> // the list of results received
@{
    ViewData["Title"] = "Search Results";
}



<h2>Search results for: @ViewData["SearchQuery"] </h2>

@if(Model.Count == 0){
    <p>No users found.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-sm">
            <thead class="thead-dark">
                <tr>Username</tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                { // takes every element from the list and shows it's elements
                    <tr>
                        <td>
                            @user.Username
                        </td>
                        <td class="text-end">
                            <a href="@Url.Action("Profile", "Account", new { id = user.Id })" class="btn btn-dark btn-sm">View Profile</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
}
